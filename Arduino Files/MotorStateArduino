#include <Servo.h>

Servo ESC1;
Servo ESC2;
Servo ESC3;

int rotateAngle;
int Speed1;
int Speed2;

void setup() {
  Serial.begin(9600);
  // put your setup code here, to run once:
  ESC1.write(90);
  ESC2.write(90);
  ESC3.write(90);
  
  ESC1.attach(9, 1000, 2000);
  ESC2.attach(10, 1000, 2000);
  ESC3.attach(5, 1000, 2000);

  rotateAngle = 90;
  Speed1 = 100;
}

void loop() {
  // put your main code here, to run repeatedly:
  if (Serial.available() > 0) { 
    int motorState = Serial.read() - '0';
    
    if (motorState == 0) {
      //Serial.println(Timer);
      //Sends value as a PWM signal to the electronic speed controller
      ESC1.write(rotateAngle);
      ESC2.write(Speed1);
      ESC3.write(Speed1);
      delay(15);
    }
  }
}
