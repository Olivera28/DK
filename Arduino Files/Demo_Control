#include <Servo.h>
Servo myservo;
Servo myservo1;

int drive1 = 3;
int drive2 = 4;
int front_r = 5;
int front_l = 6;

int drive;
int back;
int turn_r;
int turn_l;

void setup() {
  pinMode(drive1, INPUT);
  pinMode(drive2, INPUT);
  pinMode(front_r, INPUT);
  pinMode(front_l, INPUT);
  
  // put your setup code here, to run once:
  Serial.begin(9600);
  myservo.attach(9); //PWM Pin Connection
  myservo1.attach(16); //PWM Pin Connection
  delay(1);
  myservo.write(88); //DO NOT CHANGE! Require to activate ESC
  myservo1.write(105); //DO NOT CHANGE! Require to activate ESC
  delay(5000);       //Mandatory Wait Time
  
}

void loop() {
  // put your main code here, to run repeatedly:
  //int run1 = Serial.parseInt(); //reads integer values sent through serial monitor
  while (true)
  {
    turn_r = digitalRead(front_r);
    turn_l = digitalRead(front_l);
    drive = digitalRead(drive1);
    back = digitalRead(drive2);

    Serial.print(drive);
    Serial.print("\n");
    Serial.print(back);
    Serial.print("\n");
    Serial.print(turn_r);
    Serial.print("\n");
    Serial.print(turn_l);
    Serial.print("\n");

    
    if(drive == 1){
      int val = 88;
      //Serial.print(val);           //Displays read int value
      //Serial.print("\n");
      myservo.write(val);          //Writes read int value to ESC
      delay(1);
      
    }
    else if(back == 1){
      int val = 94;
      //Serial.print(val);           //Displays read int value
      //Serial.print("\n");
      myservo.write(val);          //Writes read int value to ESC
      delay(1);
      }
    else if(turn_r == 1){
      int val_turn = 60;
      myservo1.write(val_turn);          //Writes read int value to ESC
      delay(1);
    }
    else if(turn_l == 1){
      int val_turn = 150;
      myservo1.write(val_turn);          //Writes read int value to ESC
      delay(1);
    }
    else{
      int val_drive = 88;
      int val_turn = 105;
      //Serial.print(val);           //Displays read int value
      //Serial.print("\n");
      myservo.write(val_drive);          //Writes read int value to ESC
      myservo1.write(val_turn);          //Writes read int value to ESC
      delay(1);
      }
      
    
  }
}
